<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com" 
    xmlns:bindingconverters="clr-namespace:ETicketMobile.UserInterface.BindingConverters;assembly=ETicketMobile.UserInterface"
    prism:ViewModelLocator.AutowireViewModel="True"
    x:Class="ETicketMobile.Views.Login.LoginView">

    <ContentPage.Resources>
        <ResourceDictionary>
            <bindingconverters:StringToColorConverter x:Key="StringToColorConverter" />
            <bindingconverters:StringToBooleanConverter x:Key="StringToBooleanConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout
        Orientation="Vertical"
        Margin="30, 0, 30, 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <StackLayout
                Grid.Row="0"
                VerticalOptions="Center">
                <Frame
                    CornerRadius="50"
                    WidthRequest="100"
                    HeightRequest="100"
                    Padding="0"
                    HorizontalOptions="Center"
                    IsClippedToBounds="True"
                    BackgroundColor="#4e73df"
                    HasShadow="False">
                    <Image
                        Source="ETicket.jpg"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>
                </Frame>
            </StackLayout>
            <StackLayout
                Grid.Row="1"
                Margin="0, 10, 0, 10">
                <StackLayout VerticalOptions="Center">
                    <Label
                        IsVisible="{Binding EmailWarning, Converter={StaticResource StringToBooleanConverter}}"
                        Text="{Binding EmailWarning}"
                        TextColor="{Binding EmailWarning, Converter={StaticResource StringToColorConverter}}"/>
                    <Entry
                        Text="{Binding Email, Mode=TwoWay}"
                        Placeholder="Email"
                        Keyboard="Email"/>
                    <Entry
                        Text="{Binding Password, Mode=TwoWay}"
                        Placeholder="{Binding PasswordPlaceHolder}"
                        PlaceholderColor="{Binding PasswordPlaceHolderColor}"
                        IsPassword="True"/>
                    <Label
                        Text="Forgot Login?"
                        TextColor="Blue"
                        HorizontalOptions="EndAndExpand"
                        Margin="0, 10, 0, 10">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToForgetPasswordView}"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Button
                        Command="{Binding NavigateToLoginView}"
                        CornerRadius="10"
                        Text="Sign in"/>
                </StackLayout>

                <StackLayout
                    Grid.Row="2"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    Margin="0, 10, 0, 10">
                    <Label
                        Text="Don't have an account?"
                        HorizontalTextAlignment="Center"/>
                    <Label
                        Text="Sign up."
                        TextColor="Blue"
                        HorizontalTextAlignment="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToRegistrationView}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </StackLayout>
        </Grid>
    </StackLayout>
</ContentPage>