@model ETicket.ApplicationServices.DTOs.TicketVerificationDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ticket verification</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketId)
        </dt>
        <dd class="col-sm-10">
            @Html.ActionLink(@Model.TicketId.ToString(), "Details", "Ticket", new { id = @Model.TicketId }, null)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VerificationUTCDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VerificationUTCDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StationName)
        </dt>
        <dd class="col-sm-10">
            @Html.ActionLink(@Model.StationName, "Details", "Station", new { id = @Model.StationId }, null)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TransportNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.ActionLink(@Model.TransportNumber, "Details", "Transports", new { id = @Model.TransportId }, null)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsVerified)
        </dt>
        <dd class="col-sm-10">
            @(Model.IsVerified ? "Yes" : "No")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
