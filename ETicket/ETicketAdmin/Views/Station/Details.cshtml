@model ETicket.ApplicationServices.DTOs.StationDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB6R62fVbZG6cb50dEJZDMle-TGT28drV4"></script>
<h1>Details</h1>

<div>
    <h4>Station</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Latitude)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Longitude)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AreaName)
        </dt>
        <dd class="col-sm-10">
            @if (Model.AreaName == null)
            {
                @Html.DisplayFor(modelItem => Model.AreaName)
            }
            else
            {
                @Html.ActionLink(Model.AreaName, "Details", "Areas", new { id = Model.AreaId }, null)
            }
        </dd>
        <dt class="col-sm-2">Map</dt>
        <dd class="col-sm-10">
            <button class="btn btn-google btn-block fab fa-google fa-fw btn-sm" style="width:120px" onclick="initMap(@Model.Latitude,@Model.Longitude)">oogle Map</button>
            <div id="GeoLocation" style="width:100%;height:400px; display: none"></div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a href="javascript:history.back()">Back</a> |
    <a asp-action="Index">Back to station table</a>
</div>

<script src="~/js/google-map-station-display.js"></script>
