@model ETicket.ApplicationServices.DTOs.TransactionHistoryDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Transaction History</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class = "col-sm-10">
            @Model.TotalPrice.ToString("c", CultureInfo.CreateSpecificCulture("ua-UA"))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("yyyy-MM-dd hh:mm:ss")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReferenceNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReferenceNumber)
        </dd>
    </dl>
</div>
<div>
    <a href="javascript:history.back()">Back</a> |
    <a asp-action="Index">Back to Transaction History table</a>
</div>