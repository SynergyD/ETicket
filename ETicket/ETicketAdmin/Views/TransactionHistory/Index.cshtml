@model IEnumerable<ETicket.DataAccess.Domain.Entities.TransactionHistory>

@{
    ViewData["Title"] = "Index";
}

<link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<link href="~/css/trans-style.css" rel="stylesheet">

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Transaction history</h6>
        </div>
        <div class="card-body transactions">
            <div class="filters">
                <details>
                    <summary>Filters</summary>
                    <table border="0" class="filter-table">
                        <tr>
                            <th>Total price:</th>
                            <th>
                                <form class="trans-filter-form">
                                    <input type="text" class="trans-filter-form form-control form-control-sm" id="total-price-input">
                                </form>
                            </th>
                        </tr>
                        <tr>
                            <th>Count:</th>
                            <th>
                                <form class="trans-filter-form">
                                    <input type="text" class="trans-filter-form form-control form-control-sm" id="count-input">
                                </form>
                            </th>
                        </tr>
                        <tr>
                            <th>Ticket type:</th>
                            <th>
                                <form class="trans-filter-form">

                                    @Html.DropDownList("type-select", ViewData["TicketTypeId"] as IEnumerable<SelectListItem>, "", new { @class = "trans-filter-form custom-select custom-select-sm form-control form-control-sm" })

                                </form>
                            </th>
                        </tr>
                    </table>
                </details>
                <p></p>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Total Price")
                            </th>
                            <th>
                                @Html.DisplayName("Date")
                            </th>
                            <th>
                                @Html.DisplayName("Ticket Type")
                            </th>
                            <th>
                                @Html.DisplayName("Count")
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayName("Total Price")
                            </th>
                            <th>
                                @Html.DisplayName("Date")
                            </th>
                            <th>
                                @Html.DisplayName("Ticket Type")
                            </th>
                            <th>
                                @Html.DisplayName("Count")
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(item.TotalPrice + " ₴")
                                </td>

                                <td>
                                    @item.Date.ToString("yyyy-MM-dd hh:mm:ss")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketType.TypeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Count)
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/vendor/jquery/jquery.min.js"></script>

<!-- Page level plugins -->
<script src="/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/js/data-table-trans-filters.js"></script>
<br />