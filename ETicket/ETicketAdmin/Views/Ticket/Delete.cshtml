@model ETicket.ApplicationServices.DTOs.TicketDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedUTCDate)
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedUTCDate.ToString("yyyy-MM-dd hh:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivatedUTCDate)
        </dt>
        <dd class="col-sm-10">
            @Model.ActivatedUTCDate?.ToString("yyyy-MM-dd hh:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpirationUTCDate)
        </dt>
        <dd class="col-sm-10">
            @Model.ExpirationUTCDate?.ToString("yyyy-MM-dd hh:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionRRN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionRRN)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
