@model ETicket.DataAccess.Domain.Entities.Route

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Route</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">First Station</label>
                <label asp-for="FirstStation.Name" class="control-label"></label>
                <select asp-for="FirstStationId" class="form-control" asp-items="ViewBag.StationId"></select>
                <span asp-validation-for="FirstStation.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Last Station</label>
                <label asp-for="LastStation.Name" class="control-label"></label>                
                <select asp-for="LastStationId" class="form-control" asp-items="ViewBag.StationId"></select>
                <span asp-validation-for="LastStation.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>